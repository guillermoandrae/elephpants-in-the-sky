{
    "name": "guillermoandrae/elephpants-in-the-sky",
    "description": "An example PHP application deployed to AWS Lambda that displays elePHPant images.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Guillermo A. Fisher",
            "email": "me@guillermoandraefisher.com"
        }
    ],
    "require": {
        "mnapoli/bref": "^0.3.9",
        "aws/aws-sdk-php": "^3.96"
    },
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "squizlabs/php_codesniffer": "^3.4"
    },
	"autoload-dev": {
		"psr-4": {
			"AppTest\\": "tests/"
		}
	},
	"scripts": {
		"invoke": [
			"sam local invoke --no-event"
		],
		"test": [
			"phpcbf --standard=PSR2 --extensions=php src tests",
            		"phpcs --standard=PSR2 --extensions=php src tests",
            		"phpunit --coverage-text --coverage-clover=./clover.xml"
		],	
		"package": [
			"sam package --output-template-file .stack.yaml --s3-bucket elephpants-in-the-sky --s3-prefix stacks"
		],
		"deploy": [
			"sam deploy --template-file .stack.yaml --capabilities CAPABILITY_IAM --stack-name elephpants-in-the-sky"
		]
	}
}


